@model Category

<div class="container">
    <div class="row">
        <div class="fs-3 fw-bold">Create New Category</div>
    </div>

    <form asp-controller="Category" asp-action="Create" method="post" class="p-4">

        <div class="form-group">
            <label asp-for="CatName" class="pb-2">Category Name <span class="text-danger fw-bold">*</span> :</label>
            <input asp-for="CatName" class="form-control" id="categoryName" required>
            <span asp-validation-for="CatName" class="text-danger"></span>
        </div>

        <!-- Add more fields as needed -->
        <!-- Additional Space -->
        <div class="mb-3"></div>

        <div class="d-flex justify-content-start align-items-center gap-2">
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Create Category</button>
        </div>
    </form>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}