@model List<Product>

<div class="container mt-4">
    <div class="row">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                Add
            </a>
        </div>
    </div>
    <table id="productTable" class="table table-striped">
        <thead>
            <tr>
                <th colspan="1" scope="col">Product Name</th>
                <th colspan="1" scope="col">Product Price</th>
                <th colspan="1" scope="col">Quantity</th>
                <th colspan="1" scope="col">Category</th>
                <th colspan="1" scope="col">Origin Country</th>
                <th colspan="1" scope="col">Description</th>
            </tr>
        </thead>
    </table>       
</div>

@section Scripts {
    <script src="~/js/product.js"></script>   
}