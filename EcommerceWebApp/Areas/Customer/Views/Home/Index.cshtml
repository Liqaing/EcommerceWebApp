@model IEnumerable<Category>

@foreach (var cat in Model)
{
	@if (cat.Products.Count() != 0)
	{
		<div class="fs-3 fw-bold d-flex justify-content-start align-items-center gap-3" >
			<i class="bi bi-grid-fill"></i>
			@cat.CatName
		</div>
		<div class="overflow-y-hidden overflow-x-scroll d-flex justify-content-start align-items-center gap-4">
		
			@foreach (var pro in cat.Products)
			{
				<a asp-action="Details" asp-route-proId="@pro.ProductId">
					<div class="card shadow-sm my-4 rounded-4 p-2" style="width: 18rem; min-height: 20rem; max-height 25rem;">

						<div class="card-img-top image-wrapper rounded-2">
							<img src="@pro.ImageUrl" class="img-thumbnail-cus" alt="@pro.ProName" />
						</div>
						
						<div class="card-body d-flex flex-column align-items-start gap-3 px-4">
							<div class="fs-5 text-center" style="width: 100%">
								@pro.ProName
							</div>
							<div class="d-flex justify-content-between align-items-center gap-4 fs-6" style="width: 100%">
								<div class="rounded-3 bg-primary text-white" style="padding: 0.25rem 0.5rem; font-size: 13px; font-family: 'Franklin Gothic Medium';">
									$@pro.Price
								</div>
								<div>@pro.OriginCountry</div>
							</div>
							<div class="" style="width: 100%; text-indent: 1rem;">
								<div class="description-wrapper overflow-y-scroll">
									@Html.Raw(@pro.Description)
								</div>
							</div>
						</div>
					</div>
				</a>
			}
		
		</div>
	}
	
}

