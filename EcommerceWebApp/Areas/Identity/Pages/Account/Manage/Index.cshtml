@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="Input.Name" class="form-control" />
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="Input.HomeNumber" class="form-control" />
                <label asp-for="Input.HomeNumber" class="form-label"></label>
                <span asp-validation-for="Input.HomeNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="Input.StreetName" class="form-control" />
                <label asp-for="Input.StreetName" class="form-label"></label>
                <span asp-validation-for="Input.StreetName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="Input.Village" class="form-control" />
                <label asp-for="Input.Village" class="form-label"></label>
                <span asp-validation-for="Input.Village" class="text-danger"></span>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="Input.Commune" class="form-control" />
                <label asp-for="Input.Commune" class="form-label"></label>
                <span asp-validation-for="Input.Commune" class="text-danger"></span>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="Input.City" class="form-control" />
                <label asp-for="Input.City" class="form-label"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>

            <div class="form-floating mb-2">
                <input asp-for="Input.PostalNumber" class="form-control" />
                <label asp-for="Input.PostalNumber" class="form-label"></label>
                <span asp-validation-for="Input.PostalNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
